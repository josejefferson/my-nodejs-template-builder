{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2020": true,
		"jquery": true
	},
	"ignorePatterns": ["*.min.js"],
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 11,
		"allowImportExportEverywhere": true,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"warn",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": "off",
		"quotes": [
			"warn",
			"single"
		],
		"semi": [
			"warn",
			"never"
		],
		"no-unused-vars": "off",
		"no-empty": [
			"warn",
			{
				"allowEmptyCatch": true
			}
		],
		"no-undef": "off",
		"no-inner-declarations": "off",
		"camelcase": [
			"warn",
			{
				"properties": "always"
			}
		],
		"comma-dangle": ["warn", "never"]
	}
}